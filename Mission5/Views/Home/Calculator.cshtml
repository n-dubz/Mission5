@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Calculator";
}

@{
    ViewBag.Title = "Stock Market Investing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome to My Stock Market Investing Hobby Page</h1>


<div style="margin-bottom: 1rem;">
    <label for="hoursInput">Number of Hours:</label>
    <input type="number" id="hoursInput" placeholder="e.g. 5" min="1" />
</div>

<div style="margin-bottom: 1rem;">
    <label for="rateInput">Rate (per hour):</label>
    <input type="text" id="rateInput" value="50" readonly />
</div>

<div style="margin-bottom: 1rem;">
    <button id="calculateBtn">Calculate</button>
</div>

<div style="margin-bottom: 1rem;">
    <label for="totalOutput">Total Cost:</label>
    <input type="text" id="totalOutput" readonly />
</div>

@section Scripts {
    <!-- Load jQuery (Fixed version without integrity issue) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

    <!-- Load our custom script AFTER jQuery -->
    <script src="~/js/calculator.js"></script>
}
